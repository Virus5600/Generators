{
	"name": "generators",
	"version": "1.1.0-beta",
	"description": "A series of mini-applications that all create a library of generator application",
	"main": "public/index.js",
	"license": "UNLICENSED",
	"private": true,
	"author": {
		"name": "Virus5600",
		"email": "satchi5600@gmail.com"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/Virus5600/Generators"
	},
	"keywords": [
		"Electron",
		"JavaScript",
		"Generators",
		"Generator",
		"Virus5600"
	],
	"bugs": {
		"url": "https://github.com/Virus5600/Generators/issues"
	},
	"homepage": "https://github.com/Virus5600/Generators#readme",
	"exports": {
		"./node_modules/": "./node_modules"
	},
	"scripts": {
		"mix": "mix",
		"watch": "mix watch",
		"watch-poll": "mix watch -- --watch-options-poll=1000",
		"hot": "mix watch --hot",
		"dev": "electron .",
		"build": "electron-builder --publish never",
		"build-portable": "electron-builder portable",
		"deploy": "electron-builder --publish always",
		"prod": "npm run production",
		"production": "mix --production"
	},
	"devDependencies": {
		"cross-env": "^7.0.3",
		"electron": "^23.2.0",
		"electron-builder": "^24.1.1",
		"resolve-url-loader": "^5.0.0",
		"sass": "^1.60.0",
		"sass-loader": "^13.2.1",
		"webpack": "^5.76.3",
		"webpack-cli": "^5.0.1"
	},
	"dependencies": {
		"@electron/remote": "^2.0.9",
		"@fortawesome/fontawesome-free": "^6.2.0",
		"autoprefixer": "10.4.5",
		"bootstrap": "^5.3.1",
		"electron-reloader": "^1.2.3",
		"electron-updater": "^5.3.0",
		"jquery": "^3.6.1",
		"jquery-ui": "^1.13.2",
		"laravel-mix": "^6.0.49",
		"popper.js": "^1.16.1",
		"randexp": "^0.5.3",
		"sweetalert2": "10.16.9"
	},
	"files": [
		"public",
		"resources",
		"src",
		"webpack.mix.js"
	],
	"build": {
		"appId": "com.virus5600.generators",
		"productName": "Generators",
		"copyright": "Copyright (c) 2023 ${author}",
		"generateUpdatesFilesForAllChannels": true,
		"directories": {
			"output": "dist"
		},
		"extraResources": [
			"assets/resources"
		],
		"win": {
			"target": [
				"msi",
				"nsis"
			],
			"icon": "src/resources/favicon.png"
		},
		"nsis": {
			"oneClick": false,
			"perMachine": false,
			"allowToChangeInstallationDirectory": true,
			"deleteAppDataOnUninstall": false,
			"createDesktopShortcut": false,
			"menuCategory": true
		},
		"publish": [
			{
				"provider": "github",
				"owner": "Virus5600",
				"repo": "Generators"
			}
		]
	}
}
